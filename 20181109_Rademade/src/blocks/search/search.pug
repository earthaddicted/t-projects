mixin b-search()
	+b.search-panel
		+e.search
			+e.input
				//- form for search
				form(method='' action='')
					div.form-group
						input#search.form-control(type='text', placeholder='Search for something…')
						button.form-search-submit(type="submit")
							img(src="assets/svg/search.svg" alt="Search")

			+e.result
				+e('span').result-num 4
				+e('span').result-text services enregistrés

		+b-btns-add()
